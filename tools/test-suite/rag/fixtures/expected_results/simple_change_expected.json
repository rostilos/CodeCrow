{
  "scenario": "simple_change",
  "description": "Expected results for simple single-file Python change",
  "test_queries": [
    {
      "query": "UserService create user",
      "expected": {
        "min_results": 1,
        "should_contain_files": ["user_service.py"],
        "should_contain_patterns": ["UserService", "create", "user"]
      }
    },
    {
      "query": "How does user creation work?",
      "expected": {
        "min_results": 1,
        "should_contain_files": ["user_service.py", "user.py"],
        "should_contain_patterns": ["user", "create"]
      }
    }
  ],
  "pr_context_expected": {
    "changed_files": ["src/services/user_service.py"],
    "min_related_files": 1,
    "related_file_patterns": ["user", "model"],
    "min_relevance_score": 0.6,
    "should_find_chunks_with": ["UserService", "User", "create_user"]
  }
}
